pipeline {
    agent {
        label 'nop'
    }
    stages {
        stage('scm') {
            steps {
                git url: 'https://github.com/dummyrepos/nopCommerceApr24.git', branch: 'develop'
            }
        }
        stage('build') {
            steps {
                script {
                    // Add a script block to execute dotnetPublish command
                    dotnetPublish configuration: 'Release',
                                 outputDirectory: 'published',
                                 project: 'src/Presentation/Nop.Web/Nop.Web.csproj'
                }
            }
        }
    }
}
